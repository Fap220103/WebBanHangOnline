@model WebBanHangOnline.Models.EF.Contact
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/contact_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/contact_responsive.css">
<div class="container contact_container">
    <div class="row">
        <div class="col">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="index.html">Home</a></li>
                    <li class="active"><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>Contact</a></li>
                </ul>
            </div>

        </div>
    </div>

    <!-- Map Container -->

    <div class="row">
      
        <div class="col">
            <div id="google_map">
                <div class="map_container">

                    <div id="map">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d14881.759929886586!2d105.92039085171646!3d21.174673736879516!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135067b3bfc4da7%3A0xa79ba583c895933c!2zVsSDbiBNw7RuLCBZw6puIFBob25nLCBC4bqvYyBOaW5oLCBWaeG7h3QgTmFt!5e0!3m2!1svi!2s!4v1711104654262!5m2!1svi!2s" max-width="100%" max-height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact Us -->

    <div class="row">

        <div class="col-lg-6 contact_col">
            <div class="contact_contents">
                <h1>Contact Us</h1>
                <p>There are many ways to contact us. You may drop us a line, give us a call or send an email, choose what suits you the most.</p>
                <div class="col">
                
                    <p>Tên: Pháp</p>
                    <p>SDT: 0833220103</p>
                    <p>Email: phap74427@gmail.com</p>
                </div>
            </div>

            <!-- Follow Us -->

            <div class="follow_us_contents">
                <h1>Follow Us</h1>
                <ul class="social d-flex flex-row">
                    <li><a href="#" style="background-color: #3a61c9"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                    <li><a href="#" style="background-color: #41a1f6"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                    <li><a href="#" style="background-color: #fb4343"><i class="fa fa-google-plus" aria-hidden="true"></i></a></li>
                    <li><a href="#" style="background-color: #8f6247"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                </ul>
            </div>

        </div>

        <div class="col-lg-6 get_in_touch_col">
            <div class="get_in_touch_contents">
                <h1>Get In Touch With Us!</h1>
                <p>Fill out the form below to recieve a free and confidential.</p>
                <div id="load_send" >

                </div>
                @using (Ajax.BeginForm("PostContact", "Contact", new AjaxOptions
                {
                    HttpMethod = "POST",
                    UpdateTargetId = "load_data",
                    OnSuccess = "OnSuccess",
                    OnFailure = "OnFailure",
                    OnBegin = "OnBegin"
                }, new { @Id = "myForm" }))
                {
                    <script>
                        function OnBegin() {
                            $('#review_submit').attr("disabled", "disabled");
                            $('#load_send').html('<h2 style="color:red">Đang gửi.....</h2>');
                        }
                        function OnSuccess(res) {
                            if (res.Success) {
                                if (res.code == 1) {
                                    $('#load_send').html('');
                                    $("#postSuccess").addClass("alert alert-success");
                                    $('#postSuccess').html('Cảm ơn bạn vì đã liên hệ');
                                }
                                else {
                                    $('#load_send').html('');
                                    $("#postSuccess").addClass("alert alert-danger");
                                    $('#postSuccess').html('Liên hệ thất bại');
                                }
                            }
                        }
                                             //function OnFailure(rs) {

                                             //}
                    </script>
                    @Html.AntiForgeryToken();
                  
                    <div>
                        <input id="input_name" class="form_input input_name input_ph checkXSS" type="text" name="Name" placeholder="Name" required="required" data-error="Name is required.">
                        <input id="input_email" class="form_input input_email input_ph checkXSS" type="email" name="Email" placeholder="Email" required="required" data-error="Valid email is required.">
                        <input id="input_website" class="form_input input_website input_ph checkXSS" type="text" name="Website" placeholder="Website" required="required" data-error="Name is required.">
                        <textarea id="input_message" class="input_ph input_message checkXSS" name="message" placeholder="Message" rows="3" required data-error="Please, write us a message."></textarea>
                    </div>
                    <div>
                        <button id="btnSubmitCheck" type="submit" class="red_button message_submit_btn trans_300 btnSend" value="Submit">send message</button>
                    </div>
                    <div id="postSuccess" class="">

                    </div>
                }
            </div>
        </div>

    </div>
</div>
@section scripts{
    <script src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d387191.33750346623!2d-73.97968099999999!3d40.6974881!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2sNew%20York%2C%20NY%2C%20USA!5e0!3m2!1sen!2sbd!4v1694259649153!5m2!1sen!2sbd"></script>
    <script src="~/Content/assets/js/contact_custom.js"></script>
}